<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <defaults public="true" />
        <service id="bitbag_sylius_mollie_plugin.uploader.payment_method_logo_uploader" class="BitBag\SyliusMolliePlugin\Uploader\PaymentMethodLogoUploader">
            <argument type="service">
                <service class="Gaufrette\Filesystem">
                    <argument>%sylius.uploader.filesystem%</argument>
                    <factory service="knp_gaufrette.filesystem_map" method="get" />
                </service>
            </argument>
        </service>
    </services>
</container>
