{% block subject %}
    {{ 'sylius_mollie_plugin.ui.emails.payment_link'|trans }}: {{ order.number }}
{% endblock %}

{% block body %}
        {% block content %}
            {% if template.translatable.styleCss %}
                {{ template.translatable.styleCss|raw }}
            {% endif %}
            <h1 class="name">{{ template.name }}</h1>
            <h3 class="subject">{{ template.subject }}</h3>
            {{ content|raw }}
        {% endblock %}
{% endblock %}
