<?xml version="1.0" encoding="utf-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <parameters>
        <parameter key="sylius_mollie_plugin.admin.version.uri">https://repo.packagist.org/p/bitbag/mollie-plugin.json</parameter>
    </parameters>

    <services>
        <defaults public="true" />
        <service id="sylius_mollie_plugin.checker.version.mollie_plugin_latest_version_checker" class="SyliusMolliePlugin\Checker\Version\MolliePluginLatestVersionChecker">
            <argument type="service" id="sylius.http_client" />
            <argument type="string">%sylius_mollie_plugin.admin.version.uri%</argument>
        </service>
    </services>
</container>

